---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Features from '../components/Features.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="CiachNaPróbę - Wirtualny stylista fryzur AI"
  description="Zobacz jak będziesz wyglądać z nową fryzurą ZANIM pójdziesz do fryzjera. AI stworzy wizualizację w kilka sekund."
>
  <main class="min-h-screen bg-background overflow-hidden">
    <div class="fixed inset-0 bg-[linear-gradient(180deg,#12002B_0%,#2A0F54_50%,#12002B_100%)] -z-10"></div>
    <Header />
    <Hero />
    <HowItWorks />
    <Features />
    <Pricing />
    <FAQ />
    <CTASection />
    <Footer />
  </main>
</Layout>
