const features = [
  {
    title: "3 tryby opisu",
    description: "Tekst, zdjęcie wzoru lub oba naraz - wybierz jak chcesz opisać fryzurę",
    icon: "type",
  },
  {
    title: "Opis głosowy",
    description: "Powiedz jak chcesz wyglądać - AI rozpozna i przetworzy Twoje oczekiwania",
    icon: "mic",
  },
  {
    title: "Gotowe inspiracje",
    description: "Biblioteka popularnych stylów do wyboru jednym kliknięciem",
    icon: "book",
  },
  {
    title: "Zdjęcie referencyjne",
    description: "Pokaż zdjęcie fryzury celebryty lub z Pinteresta",
    icon: "image",
  },
  {
    title: "Wizualizacja AI",
    description: "Realistyczny podgląd fryzury nałożony na Twoją twarz",
    icon: "sparkles",
  },
  {
    title: "Pobieranie i udostępnianie",
