---

<section id="funkcje" class="py-20 md:py-32 relative">
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[150px] -z-10"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        Wszystko czego potrzebujesz
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Opisz, pokaż lub powiedz - my zrozumiemy
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {features.map((feature) => (
        <div class="group relative p-6 rounded-2xl bg-card/50 border border-border hover:border-primary/50 transition-all hover:bg-card/80">
          <!-- Hover glow -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-primary/5 to-accent/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>

          <div class="relative">
            <div class="w-12 h-12 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
              <Fragment set:html={icons[feature.icon]} />
            </div>

            <h3 class="text-lg font-semibold text-foreground mb-2">
              {feature.title}
            </h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Cross-platform badge -->
    <div class="mt-12 flex justify-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-secondary/50 border border-border">
        <!-- Smartphone icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-primary">
          <rect width="14" height="20" x="5" y="2" rx="2" ry="2"/>
          <path d="M12 18h.01"/>
        </svg>
        <span class="text-sm text-muted-foreground">
          Działa na <span class="text-foreground font-medium">iOS</span>, <span class="text-foreground font-medium">Android</span> i w <span class="text-foreground font-medium">przeglądarce</span>
        </span>
      </div>
    </div>
  </div>
</section>
